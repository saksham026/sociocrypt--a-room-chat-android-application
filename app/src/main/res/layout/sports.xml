<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sakshamgupta.flashchatnewfirebase.blogs">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/logo" />


    <Button
        android:id="@+id/button_sports"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_weight="1"
        android:onClick="sports"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Sports" />

    <Button
        android:id="@+id/button_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="330dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@color/green"
        android:onClick="education"
        android:text="Education" />

    <Button
        android:id="@+id/button_politics"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="260dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:onClick="politics"
        android:text="Politics" />

</RelativeLayout>
